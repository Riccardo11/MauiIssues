<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:localizationinrelease="clr-namespace:LocalizationInRelease"
             x:DataType="localizationinrelease:CollectionViewViewModel"
             x:Class="LocalizationInRelease.CollectionViewPage"
             Title="CollectionViewPage">
    <CollectionView
        ItemsSource="{Binding Ints}"
        SelectedItem="{Binding SelectedInt}"
        SelectionChanged="CollectionView_SelectionChanged"
        VerticalOptions="FillAndExpand"
        />
</ContentPage>
